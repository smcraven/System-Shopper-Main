@page
@model System_Shopper.Pages.Manufacturers.IndexModel
@{
    ViewData["Title"] = "Manufacturers";
}

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <h2 style="color: #1D2F6F">Manufacturers</h2>
        </div>
        <div class="col-sm-9">
            <a style="background-color: #FAC748;" class="btn" asp-page="AddManufacturer">Add Manufacturer</a>
        </div>
    </div>

    @foreach (var manufacturer in Model.ManufacturerList)
    {
        <!--Manufacturer List-->
        <div style="border-style: solid; border-color: #1D2F6F;" class="row mb-3 p-2 rounded">
            <div style="display: flex; justify-content: center; align-items: center;" class="col-sm-3">
                <img style="width: 200px;" class="img-fluid" src="@manufacturer.ManufacturerLogo" alt="Company Logo"/> <!-- Manufacturer image goes here -->
            </div>
            <!-- Manufacturer Information -->
            <div style="border-left-style: solid; border-color: #8390FA" class="col-sm-8">
                <!-- Manufacturer Name -->
                <div class="row">
                    <div class="col-sm-12">
                        <h4>@manufacturer.ManufacturerName</h4>
                    </div>
                </div>
                <!-- Manufacturer Bio -->
                <div class="row">
                    <div class="col-sm-12">
                        @manufacturer.ManufacturerBio
                    </div>
                </div>
            </div>
            <!-- Spacer -->
            <!--<div class="col-sm-2"></div>-->
            <!-- Edit and Delete Buttons-->
            <div style="border-left-style: solid; border-color: #8390FA; display: block; align-items: stretch;" class="col-sm-1 px-1">
                <form>
                    <div class="row">
                        <div class="col-sm-12">
                            <a style="background-color: #FAC748;" asp-page="EditManufacturer" asp-route-id="@manufacturer.ManufacturerId" class="btn mb-3">
                                <i class="bi bi-pencil mx-1"></i>Edit
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <!--<a asp-page="DeleteManufacturer" asp-route-id="@manufacturer.ManufacturerId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this manufacturer? This action cannot be undone.')">
                                <i class="bi bi-x-circle mx-2"></i>Delete
                            </a>-->
                            <button type="submit" asp-route-id="@manufacturer.ManufacturerId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this manufacturer? This action cannot be undone.')">
                                <i class="bi bi-x-circle mx-1"></i>Delete
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
</div>
